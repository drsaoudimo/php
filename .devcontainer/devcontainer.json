{
  "name": "PHP Dev Container",

  "dockerComposeFile": "./compose.yml",

  "service": "main",
  "workspaceFolder": "/app",

  // make sure we get git and gnu core utils
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1.3.4": {}
  },

  // Add php extensions
  "customizations": {
    "vscode": {
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php"
      },
      "extensions": [
        "xdebug.php-debug",
        "bmewburn.vscode-intelephense-client",
        "mrmlnc.vscode-apache"
      ]
    }
  },
  // links /app/src to /var/www/html so that it should Just Work with apache
  // this means config etc can be in /app, while code is in /src
  "postCreateCommand": "chmod a+x \"$(pwd)/src\" && sudo rm -rf /var/www/html && sudo ln -s \"$(pwd)/src\" /var/www/html",

  "forwardPorts": [80, "admin:80", "db:3306"],

  "portsAttributes": {
    "80": {
      "label": "Remote PHP Server",
      "onAutoForward": "notify"
    },
    "admin:80": {
      "label": "PHPMyAdmin",
      "onAutoForward": "notify"
    },
    "db:3306": {
      "label": "MYSql Database"
    }
  }
}
